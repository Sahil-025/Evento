<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome - Club Member</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom color theme */
        body {
            background-color: #f4f6f9; /* Light gray background */
            color: #333333; /* Dark text for readability */
        }

        .navbar {
            background-color: #2c3e50; /* Dark blue background for navbar */
        }

        .navbar .navbar-brand,
        .navbar .nav-link {
            color: #ffffff !important; /* White text for navbar items */
        }

        .navbar .navbar-toggler-icon {
            background-color: #ffffff; /* White color for navbar toggle */
        }

        #logout {
            margin-left: auto; /* Push the logout button to the right */
        }

        .btn-danger {
            background-color: #e74c3c; /* Red button color */
            border: none;
        }

        .btn-danger:hover {
            background-color: #c0392b; /* Darker red on hover */
        }

        .btn-primary {
            background-color: #3498db; /* Blue button color */
            border: none;
        }

        .btn-primary:hover {
            background-color: #2980b9; /* Darker blue on hover */
        }

        .form-control {
            border-radius: 5px; /* Rounded corners for form inputs */
            border-color: #ced4da; /* Light gray border */
        }

        .form-control:focus {
            border-color: #3498db; /* Blue border when focused */
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.5); /* Blue glow effect */
        }

        .table {
            background-color: #ffffff; /* White table background */
            border-radius: 5px; /* Rounded corners for table */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Soft shadow */
        }

        .table th {
            background-color: #2c3e50; /* Dark blue table header */
            color: white; /* White text for table headers */
        }

        .table td, .table th {
            vertical-align: middle; /* Align text vertically in table */
        }

        h2, h4 {
            color: #2c3e50; /* Darker heading text */
        }

        section.body {
            padding: 30px 0;
        }

        .container {
            max-width: 800px;
        }

        .btn-info {
            background-color: #1abc9c; /* Teal button for registrations */
            border: none;
        }

        .btn-info:hover {
            background-color: #16a085; /* Darker teal on hover */
        }

        #logout a {
            color: white;
            text-decoration: none;
        }

        #logout a:hover {
            color: #f8f9fa; /* Light text on hover for logout */
        }
        
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <button id="logout" class="btn btn-danger">
                        <a href="/logout" class="text-white">Logout</a>
                    </button>
                </li>
            </ul>
        </div>
    </nav>

    <section class="body">
        <div class="container">
            <h2 class="my-4">Welcome Club Member</h2>
            <!-- Form to Add New Event -->
            <form action="/addEvent" method="POST">
                <h4>Add New Event</h4>
                <div class="form-group">
                    <label for="eventName">Event Name</label>
                    <input type="text" name="eventName" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="eventDate">Event Date</label>
                    <input type="date" name="eventDate" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="eventTime">Event Time</label>
                    <input type="time" name="eventTime" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="venue">Venue</label>
                    <input type="text" name="venue" class="form-control" required>
                </div>

                <!-- Add Club Name input field -->
                <div class="form-group">
                    <label for="clubName">Club Name</label>
                    <!-- Set the club name from session -->
                    <input type="text" name="clubName" class="form-control" value="<%= clubName %>" readonly>
                </div>

                <div class="form-group">
                    <label for="eventDescription">Event Description</label>
                    <textarea name="eventDescription" class="form-control" rows="4" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit Event</button>
            </form>

            <!-- List of Events -->
            <h4 class="my-4">Your Approved Events</h4>
            <% if (events.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Event Name</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Venue</th>
                            <th>Registrations</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% events.forEach(event => { %>
                            <tr>
                                <td><%= event.name %></td>
                                <td><%= event.date %></td>
                                <td><%= event.time %></td>
                                <td><%= event.venue %></td>
                                <td>
                                    <a href="/viewRegistrations/<%= event.id %>" class="btn btn-info">View Registrations</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No approved events posted yet.</p>
            <% } %>
        </div>
    </section>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
